<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primaryColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textOpcionesContrato"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="&#8942;"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/textNombreContatador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre contratado"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textNombreContratado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre contratado"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/textDomicilioContratador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domicilio del contratador"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/textOficioContratado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oficio de contratado"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>